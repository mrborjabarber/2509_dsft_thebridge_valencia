# Configuración de PostgreSQL en Render
# Copia este archivo a .env y reemplaza los valores con tus credenciales reales

# Hostname del servidor (obtenlo de Render)
DB_HOST=dpg-xxxxxxxxx.frankfurt-postgres.render.com

# Puerto (generalmente 5432)
DB_PORT=5432

# Nombre de la base de datos
DB_NAME=escuela_informatica

# Usuario de la base de datos
DB_USER=tu_usuario

# Contraseña de la base de datos
DB_PASSWORD=tu_password_generado_por_render

# URL completa (opcional, útil para algunas librerías)
DATABASE_URL=postgresql://tu_usuario:tu_password@dpg-xxxxxxxxx.frankfurt-postgres.render.com/escuela_informatica
